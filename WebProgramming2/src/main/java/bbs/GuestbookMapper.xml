<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="bbs.GuestbookMapper">

  <select id="selectAll" resultType="bbs.Guestbook">
    SELECT * FROM [Guestbook] ORDER BY [ID] DESC
  </select>
  
  <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO [Guestbook] ([Name], [Passwd], [IP], [Text], [Date])
         VALUES (#{name}, #{passwd}, #{IP}, #{text}, #{date})
  </insert>
  
  <delete id="delete">
      DELETE FROM [Guestbook] WHERE [ID] = #{id}
  </delete>

</mapper>
