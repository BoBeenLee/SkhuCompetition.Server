<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/security
    http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<http auto-config="true">
		<!-- <intercept-url pattern="/**" access="ROLE_USER" /> -->
		<!--<form-login login-page="/mainLogin.jsp" login-processing-url="/login_process.do" 
			authentication-failure-url="/login.jsp?error=1" default-target-url="/index.jsp" 
			/> <logout logout-url="/logout.do" logout-success-url="/index.jsp" invalidate-session="true" 
			/> -->
	</http>

	<authentication-manager>
		<authentication-provider>
			<jdbc-user-service data-source-ref="dataSource"
				users-by-username-query="select 로그인명 username, 비밀번호 password, 1 enabled 
                                     from 사용자 
                                     where 로그인명 = ?"
				authorities-by-username-query="select 로그인명 username, 역할 authority 
                                           from 사용자 
                                           where 로그인명 = ?" />
		</authentication-provider>
	</authentication-manager>

</beans:beans>
